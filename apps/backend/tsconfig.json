{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "../../packages/shared/types.d.ts"]
}
